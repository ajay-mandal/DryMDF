# App Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=api

# CORS
CORS_ORIGIN=http://localhost:3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Storage Configuration (AWS S3 / Cloudflare R2)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=drymdf-files

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Job Queue
QUEUE_NAME=pdf-generation
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=3000

# Logging
LOG_LEVEL=debug
